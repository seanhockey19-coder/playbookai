{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "react"],

    /* ⭐ ADD THESE TWO LINES ⭐ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
    /* ⭐ END OF FIX ⭐ */
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
